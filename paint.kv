#:import C kivy.utils.get_color_from_hex

<MyButton>
    background_normal : 'button_normal.png'
    background_down: 'button_down.png'
    border : (3,3,3,3)
<ColorButton@MyButton>
    group : 'color'
    on_release: app.canvas_widget.set_color(self.background_color)
<LineWidthButton@MyButton>
    group:'linewidth'
    background_color : C('#808080')
    on_release: app.canvas_widget.set_line_width(self.text)
<CanvasWidget>
    Button:
        text:'Clear'
        font_size:20
        right : root.right
        top:root.top
        width:80
        height:40
        background_normal : 'red_button_normal.png'
        background_down : 'red_button_down.png'
        border: (2,2,2,2)
        on_release: root.clear_canvas()
    BoxLayout:
        orientation : 'vertical'
        padding: 2
        spacing :2
        x : 0
        top: root.top
        width: 80
        height :120

        LineWidthButton:
            text : 'Thin'
        LineWidthButton:
            text : 'Normal'
            state: 'down'
        LineWidthButton:
            text : 'Thick'
        LineWidthButton:
            text : 'Soo Thick'

    BoxLayout:
        orientation: 'horizontal'
